main :: () {
    if false {
        // Taking a slice of a string
        text := "The quick brown fox jumps over the lazy dog";

        quickBrown := text.slice(4, 15);

        print("%\n", quickBrown);
        print("%\n", quickBrown.len);

        fox := text.slice(16);
        print("%\n", fox);
        print("%\n", fox.len);
    }
    if false {
        // Copying a string
        text := "The quick brown fox jumps over the lazy dog";
        
        copy := text.copy();

        text[4] = 115; // 's'
        text[5] = 108; // 'l'
        text[6] = 111; // 'o'
        text[7] = 119; // 'w'
        text[8] = 32;
        print("%\n", text);

        print("%", copy);
    }
    if true {
        // To uppercase
        text := "The quick brown fox jumps over the lazy dog";

        uppercased := text.toUpper();
        print("%\n", uppercased);
    }

    if true {
        // To lowercase
        text := "THE QUICK BROWN FOX JUMPS OVER THE LAZY DOG";

        lowercase := text.toLower();
        print("%\n", lowercase);
    }
}