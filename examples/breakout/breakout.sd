BALL_SIZE :: 20;

BRICK_WIDTH  :: 80;
BRICK_HEIGHT :: 20;
BRICK_PADDING :: 15;
BRICK_ROWS :: 8;
BRICK_COLS :: 11;

BAR_START_WIDTH :: 200;

TOP_MARGIN :: 80;

Brick :: struct {
    x:     int;
    y:     int;
    color: Color;
    dead:  bool;
}

Bar :: struct {
    x:      float;
    y:      float;
    width:  float;
    height: float;
    vel_x:  float;
    speed:  float;

}

Ball :: struct {
    x:      float;
    y:      float;
    size:   float;
    vel_x:  float;
    vel_y:  float;
}

get_ball_rect :: (ball: Ball) -> Rectangle {
    return {
        x = ball.x,
        y = ball.y,
        width = ball.size,
        height = ball.size,
    };
}

get_bar_rect :: (bar: Bar) -> Rectangle {
    return {
        bar.x,
        bar.y,
        bar.width,
        bar.height,
    };
}

main :: () {

    COLOR_WHITE := Color{255, 255, 255, 255};

    window_width := 1200;
    window_height := 800;

    InitWindow(window_width, window_height, "Super Breakout");

    SetTargetFPS(90);

    text := "Super Breakout";
    text_len := MeasureText(text, 24);

    ball := Ball{
        x = window_width * 0.5,
        y = window_height * 0.5,
        size = BALL_SIZE,
        vel_x = 400.0,
        vel_y = 400.0,
    };

    bar := Bar{
        x = window_width * 0.5 - BAR_START_WIDTH * 0.5,
        y = window_height - 70,
        width = BAR_START_WIDTH,
        height = 20,
        vel_x = 0,
        speed = 400,
    };

    bricks : [BRICK_ROWS * BRICK_COLS] Brick;

    // Initiate the bricks
    brick_row_width := (BRICK_WIDTH + BRICK_PADDING) * BRICK_COLS - 1;
    for row in 0..BRICK_ROWS {
        for col in 0..BRICK_COLS {
            index := row * BRICK_COLS + col;
            
            x := (BRICK_WIDTH + BRICK_PADDING)  * col + (window_width / 2) - (brick_row_width / 2);
            y := (BRICK_HEIGHT + BRICK_PADDING) * row + TOP_MARGIN;

            color := Color{33, 186, 10, 255};

            brick := Brick{
                x = x,
                y = y,
                color = color,
                dead = false,
            };

            bricks[index] = brick;
        }
    }

    while !WindowShouldClose() {

        dt := GetFrameTime();

        // Input
        bar.vel_x = 0;

        if IsKeyDown(.A) || IsKeyDown(.LEFT) {
            bar.vel_x -= bar.speed;
        }
        if IsKeyDown(.D) || IsKeyDown(.RIGHT) {
            bar.vel_x += bar.speed;
        }

        // Simulate the next ball and bar position
        next_ball := ball;
        next_ball.x = ball.x + ball.vel_x * dt;
        next_ball.y = ball.y + ball.vel_y * dt;
        
        next_bar  := bar;
        next_bar.x = bar.x + bar.vel_x * dt;
        
        // Collisions ball and walls
        if next_ball.x < 0 || next_ball.x + next_ball.size > window_width {
            ball.vel_x = -ball.vel_x;
        }

        if next_ball.y < 0 || next_ball.y + next_ball.size > window_height {
            ball.vel_y = -ball.vel_y;
        }

        // Collision ball and bar
        next_ball_rect := get_ball_rect(next_ball);
        next_bar_rect  := get_bar_rect(next_bar);

        collides := CheckCollisionRecs(next_ball_rect, next_bar_rect);
        if collides {

            // Determine which way the ball should go based on how much its stuck
            // within the bar
            overlap := calculate_overlap(next_ball_rect, next_bar_rect, { ball.vel_x, ball.vel_y });

            // Adjust direction and position of the ball to make it unstuck
            if overlap.x < overlap.y {
                ball.vel_x = -ball.vel_x;
                ball.x    += overlap.x;
            } else {
                ball.vel_y = -ball.vel_y;
                ball.y    += overlap.y;
            }
        }

        // Collision bar and walls
        if next_bar.x < 0 || next_bar.x + bar.width > window_width {
            bar.vel_x = 0;
        }

        // Do position updates
        ball.x += ball.vel_x * dt;
        ball.y += ball.vel_y * dt;
        bar.x  += bar.vel_x * dt;


        //
        // Drawing
        //
        BeginDrawing();
        ClearBackground({ 30, 30, 30, 30 });
        
        // Draw bricks
        for b in bricks {
            DrawRectangle(b.x, b.y, BRICK_WIDTH, BRICK_HEIGHT, b.color);
        }

        // Draw the ball
        DrawRectangle(xx ball.x, xx ball.y, xx ball.size, xx ball.size, COLOR_WHITE);
        
        // Draw the bar
        DrawRectangle(xx bar.x, xx bar.y, xx bar.width, xx bar.height, COLOR_WHITE);

        DrawFPS(window_width - 100, 16);
        DrawText(text, xx (window_width * 0.5 - text_len * 0.5), 24, 24, COLOR_WHITE);

        EndDrawing();
    }

    CloseWindow();
}

calculate_overlap :: (a: Rectangle, b: Rectangle, velocity: Vector2) -> Vector2 {
    overlap := Vector2{};

    if velocity.x > 0 {
        overlap.x = a.x + a.width - b.x; 
    } else {
        overlap.x = b.x + b.width - a.x; 
    }

    if velocity.y > 0 {
        overlap.y = a.y + a.height - b.y; 
    } else {
        overlap.y = b.y + b.height - a.y; 
    }

    return overlap;
}