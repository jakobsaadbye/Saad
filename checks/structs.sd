DogKind :: enum {
    samoid,
    chiwawa,
    bulldog,
}

Dog :: struct {
    kind   : DogKind;
    legs   : int;
    weight : float; // kg
    height : float; // m
}

main :: () {
    samoid : Dog = .{
        kind = .samoid,
        legs = 4,
        weight = 20.0,
        height = 0.5
    };

    bmi := samoid.weight / (samoid.height * samoid.height);
    assert(bmi == 80.0);
    assert(samoid.kind == DogKind.samoid);
    assert(samoid.legs == 4);
}