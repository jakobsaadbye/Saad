Ball :: struct {
    x:      float;
    y:      float;
    size:   float;
    vel_x:  float;
    vel_y:  float;
}

main :: () {
    ball := Ball{
        x = 600.0,
        y = 650.0,
        size = 20,
        vel_x = 400.0,
        vel_y = 400.0,
    };

    ball_ptr := &ball;

    ball_ptr.vel_y += 30;

    print("%", ball);
}