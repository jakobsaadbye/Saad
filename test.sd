Color :: struct {
    r: u8;
    g: u8;
    b: u8;
    a: u8;
}

mix :: method (a: Color, b: Color) -> Color {
    return {
        r = a.r + b.r,
        g = a.g + b.g,
        b = a.b + b.b,
        a = a.a + b.a,
    };
}

main :: () {
    red  := Color{255, 0, 0, 255};
    blue := Color{0, 0, 255, 255};

    purple := red.mix(blue);

    print("%", purple);
}