import "fmt";
import "strings";

HttpStatus :: enum {
    Ok = 200,
    Created = 201,
    BadRequest = 400,
}

Vector3 :: struct {
    x, y, z: float;
}

EntityKind :: enum {
    Human,
    Monster,
    Door,
    Wall
}

Entity :: struct {
    kind: EntityKind;
    position: Vector3;
    velocity: Vector3;
    mesh: []Vector3;
    buffer: *u8;
}

main :: () {
    e := Entity{
        kind = .Monster,
        position = {1, 2, 3},
        velocity = {2.0, 1.0, 0},
        mesh = [{1, 2, 3}, {4, 5, 6}],
    };

    sb := NewStringBuilder(1024);

    sb.add("My name % % % % % % is James bond", 1, 3.14, true, "Hellope", cast(HttpStatus)401, e);

    str := sb.toString();
    Print("%", str);
}