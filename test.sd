Rectangle :: struct {
    x: float;
    y: float;
    width: float;
    height: float;
}

Ball :: struct {
    x:      float;
    y:      float;
    size:   float;
    vel_x:  float;
    vel_y:  float;
}

get_ball_rect :: (ball: Ball) -> Rectangle {
    return Rectangle{
        ball.x,
        ball.y,
        ball.size,
        ball.size,
    };
}

main :: () {
    ball := Ball{
        x = 600.0,
        y = 650.0,
        size = 20,
        vel_x = 400.0,
        vel_y = 400.0,
    };

    rect := get_ball_rect(ball);

    print("%", rect);
}