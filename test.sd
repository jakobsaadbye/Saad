Vector4 :: struct {
    x: float;
    y: float;
    z: float;
    w: float;
}

Color :: struct {
    r: u8;
    g: u8;
    b: u8;
    a: u8;
}

lerp :: method (a: Color, b: Color, t: f32) -> Color {
    return Color{
        r = cast(u8)(a.r + (b.r - a.r) * t),
        g = cast(u8)(a.g + (b.g - a.g) * t),
        b = cast(u8)(a.b + (b.b - a.b) * t),
        a = cast(u8)(a.a + (b.a - a.a) * t),
    };
}

toVector4 :: method (c: Color) -> Vector4 {
    return Vector4{
        x = xx c.r,
        y = xx c.g,
        z = xx c.b,
        w = xx c.a,
    };
}

main :: () {
    red  := Color{255, 0, 0, 255};
    blue := Color{0, 0, 255, 255};

    vec4 := red.lerp(blue, 0.0).toVector4();

    print("%", vec4);
}