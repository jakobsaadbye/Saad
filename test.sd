Ball :: struct {
    x:      float;
    y:      float;
    size:   float;
    vel_x:  float;
    vel_y:  float;
}

main :: () {
    ball := Ball{
        x = 600.0,
        y = 650.0,
        size = 20,
        vel_x = 400.0,
        vel_y = 400.0,
    };

    update_ball(&ball);

    print("ball %", ball);
}

update_ball :: (ball: *Ball) {
    ball.vel_y += 30;
}